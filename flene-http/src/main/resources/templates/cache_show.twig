{% extends 'cache_main.twig' %}

{% block breadcrumbCurrentPage %}{{ configuration.name }}{% endblock %}
{% block content %}
    <div class="container">
        <h1 class="page-header">&laquo;{{ configuration.name }}&raquo;</h1>

        <div class="row">
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#configuration" aria-controls="home" role="tab" data-toggle="tab">Configuration</a></li>
                <li role="presentation"><a href="#owners" aria-controls="owners" role="tab" data-toggle="tab">Cache owners</a></li>
                <li role="presentation" class=""><a href="#metrics" aria-controls="home" role="tab" data-toggle="tab">Metrics</a></li>
                <li role="presentation" class=""><a href="#cacheMetricsByNode" aria-controls="home" role="tab" data-toggle="tab">Metrics by node</a></li>
            </ul>
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="configuration">
                    {% include 'cache_configuration.twig' with {'configuration': configuration} %}
                </div>
                <div role="tabpanel" class="tab-pane" id="owners">
                    <h2>Cache owners</h2>
                    <div class="row">

                        {% include "cluster_nodes_metrics.twig" with {'nodes': owners} %}
                    </div>
                    {% include "node_list_block.twig" with {'nodes': owners} %}

                </div>
                <div role="tabpanel" class="tab-pane" id="metrics">
                    <h2>Metrics</h2>

                    {% include 'cache_metrics.twig' with {'name': configuration.name} %}
                </div>
                <div role="tabpanel" class="tab-pane" id="cacheMetricsByNode">
                    <h2>Metrics by node</h2>
                </div>
            </div>
        </div>
    </div>


{% endblock %}