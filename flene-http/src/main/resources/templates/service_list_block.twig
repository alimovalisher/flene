<div class="row">
    <!-- Nav tabs -->

    <!-- Tab panes -->

    <div class="container container-fluid">
        <div class="row">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>Consistent ID</th>
                        <th>Order</th>
                        <th>Address</th>
                        <th>Host</th>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Count</th>
                        <th></th>
                    </tr>
                    {% for entry in topology.entrySet %}
                        <tr>
                            <td><a href="/node/{{ entry.key.id }}">{{ entry.key.consistentId }}</a></td>
                            <td>{{ entry.key.order }}</td>
                            <td>{{ entry.key.addresses }}</td>
                            <td>{{ entry.key.hostNames }}</td>
                            <td>{{ entry.key.id }}</td>
                            <td>{% if entry.key.isClient %}Client{% else %}Server{% endif %}</td>
                            <td>{{ entry.value }}</td>
                            <td><a class="btn btn-default" href="/node/{{ entry.key.id }}"><i class="fa fa-info" aria-hidden="true"></i> Show</a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
</div>